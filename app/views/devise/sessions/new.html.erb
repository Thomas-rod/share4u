<div class="session-div">
  <div class="session-div--login">
    <%= image_tag 'logo_white.svg' %>
    <div class="session-div--login--form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name, magnet_profile_id: params[:magnet_profile_id])) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label: "Mot de passe",
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label:"Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Me connecter", class:"button orange-button" %>
        </div><br>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
