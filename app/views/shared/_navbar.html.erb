<div id="navbar-container">
  <%#= render partial: "shared/banner_coupon" %>
  <div id="navbar">
    <div id="navbar-logo">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png' %>
      <% end %>
    </div>
    <div id="navbar-links">
      <% if current_user && !current_user.profile.nil? %>
        <%= link_to "Me déconnecter", destroy_user_session_path, class:"button nav-link" %>
        <%= link_to "Mon profil", profile_path(current_user.profile), class:"button second-button" %>
      <% elsif current_user %>
        <%= link_to "Me déconnecter", destroy_user_session_path, class:"button third-button" %>
      <% else %>
        <%= link_to "Se connecter", new_user_session_path, class:"button nav-link"%>
        <%= link_to "Créer un compte", new_user_registration_path, class:"button second-button" %>
      <% end %>
    </div>
  </div>
</div>
