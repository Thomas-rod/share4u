      <%= link_to root_path do %>
        <%= image_tag 'logo.png' %>
      <% end %>
    </div>
    <div id="navbar-links">
      <% if @magnet_info %>
        <% if current_user.profile.magnet_bought %>
          <%= link_to "Log out", destroy_user_session_path, class:"button nav-link signout" %>
          <span class="main-button button">Magnet activÃ©  ðŸš€</span>
